<h1>Edit A Director</h1>

<form action="http://localhost:3000/update_director/<%= @director.id %>">

<div>
  <label>Date of Birth</label>
  <input type="text" name="dob" placeholder="Date of Birth" value="<%= @director.dob %>">
</div>
<div>
  <label>Name</label>
  <input type="text" name="name" placeholder="Name" value="<%= @director.name %>">
</div>

<div>
  <label>Bio</label>
  <textarea name="bio" placeholder="Bio"><%= @director.bio %></textarea>
</div>

<div>
  <label>Image Url</label>
  <input type="text" name="image_url" placeholder="URL" value="<%= @director.image_url %>">
</div>


  <button>Edit director</button>
</form>
