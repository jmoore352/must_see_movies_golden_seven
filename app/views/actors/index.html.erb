<h1>Actors</h1>

<a href="http://localhost:3000/actors/new_form">Add a New actor</a>

<table>
  <tr>
      <th>Image</th>
      <th>Date of Birth</th>
      <th>Name</th>
      <th>Bio</th>
      <th></th>
      <th></th>
      <th></th>
  </tr>
  <% @actors.each do |actor| %>
  <tr>
    <td><img src="<%= actor.image_url %>" width="80"></td>
    <td><%= actor.dob %></td>
    <td><%= actor.name %></td>
    <td><%= truncate(actor.bio) %></td>
    <td>
      <a href="http://localhost:3000/actors/<%= actor.id %>">Show</a>
    </td>
    <td>
      <a href="http://localhost:3000/actors/<%= actor.id %>/edit_form">Edit</a>
    </td>
    <td>
      <a href="http://localhost:3000/delete_actor/<%= actor.id %>">Delete</a>
    </td>
  </tr>
  <% end %>
</table>
